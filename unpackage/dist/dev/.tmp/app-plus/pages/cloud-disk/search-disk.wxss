.status_bar {
    height: var(--status-bar-height);  
    width: 100%;  
    background-color: #EEEEED;
}
.top_view {  
    height: var(--status-bar-height);  
    width: 100%;  
    position: fixed;  
    background-color: #EEEEED;  
    top: 0;  
    z-index: 999;
}
.news-tabtop-height {
	width: 100%;
	position: fixed;
	z-index: 999;
}
.swiper-area {
	width: 100%;
	height: 100%;
	background-color: #eeeeed;
	position: -webkit-sticky;
	position: sticky;
	margin-top: 50px;
}
