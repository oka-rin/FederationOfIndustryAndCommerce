/* 搜索框 */
.search-ico {
		width: 40rpx;
		height: 40rpx;
}
.search-text {
		font-size: 14px;
		height: 100%;
		width: 100%;
}
.search-block {
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		    -ms-flex-direction: row;
		        flex-direction: row;
		width: 92%;
		height: 40px;
		margin-bottom: 0rpx;
		border-radius: 12px;
		margin-top: 10px;
		margin-bottom: 10px;
		margin-left: 4%;
		margin-right: 4%;
		background-color: #FFFFFF;
}
.search-ico-wapper {
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		    -ms-flex-direction: column;
		        flex-direction: column;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		    -ms-flex-pack: center;
		        justify-content: center;
		padding: 0rpx 10rpx;
}
	/* 问答主题 */
.qa-block {
		width: 100%;
		height: 100%;
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		    -ms-flex-direction: column;
		        flex-direction: column;
		margin-top: 12px;
}
.qa-block-item {
		padding: 3%;
		width: 94%;
		background-color: #FFFFFF;
		margin-bottom: 12px;
}
.qa-text {
		/* text-indent:2em; 首行缩进2个空格*/
		/* 控制文本显示4行 */
		display: -webkit-box;
		-webkit-line-clamp: 4;
		-webkit-box-orient: vertical;
		overflow: hidden;
}
.loading{
	line-height: 2em;
	text-align: center;
	color: #888;
	margin-top: 10px;
	padding-bottom: 5px;
}

